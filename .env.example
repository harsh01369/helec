# ==============================================
# HELEC Backend - Environment Variables Template
# ==============================================
# Copy this file to packages/backend/.env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database (Docker default - use this for local development)
DATABASE_URL="postgresql://helec_user:helec_pass_2025@localhost:5433/helec_dev?schema=public"

# Groq LLM API (REQUIRED - Get your free key at https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# Optional: Other LLM providers (not currently used, but available)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Security (Change in production!)
JWT_SECRET=your_random_secret_here_change_in_production_min_32_chars

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
